{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "babel",
        "react"
    ],

    "rules": {
        "babel/no-invalid-this": 1,
        "babel/semi": 0,
        "no-unexpected-multiline": [1],

        "react/jsx-uses-vars": [2],
        "react/jsx-uses-react": [2],

        "no-console": [0],

        "no-unused-vars": [1],
        "indent": [
            "warn",
            4,
            {
              "SwitchCase": 1
            }
        ],
        "no-empty": [1],
        "linebreak-style": [
            "off",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "implicit-arrow-linebreak": "off",
        "no-constant-condition": "off"
    }
}